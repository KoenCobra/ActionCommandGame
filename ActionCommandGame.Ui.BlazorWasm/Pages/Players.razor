@page "/players"
@inject IPlayerApi _playerApi
@inject ILocalStorageService _storageService

<div class="d-flex min-vh-100 w-100 players-background justify-content-center align-items-center">
    <div class="container">
        <h1 class="display-1 player-select-title mb-5 display-1">Select Your Lifter</h1>
        <div class="row">
            @if (PlayersResult is null)
            {
                <img style="height: 100px; width: 100px;" src="https://i.gifer.com/OSnw.gif" />
                <p>Loading....</p>
            }
            else
            {
                @foreach (var player in PlayersResult)
                {
                    <div class="col-12 col-sm-6 col-lg-4 col-xl-3 mb-3 player-card">
                        <PlayerCardComponent Player="player"></PlayerCardComponent>
                    </div>
                }
            }
        </div>
    </div>
</div>

@code
{
    private IList<PlayerResult>? PlayersResult { get; set; }
    private PlayerFilter Filter { get; set; }

    protected override async Task OnInitializedAsync()
    {
        Filter = new PlayerFilter { FilterUserPlayers = true };
        var players = await _playerApi.Find(Filter);

        PlayersResult = players.Data;

        await base.OnInitializedAsync();
    }
}
