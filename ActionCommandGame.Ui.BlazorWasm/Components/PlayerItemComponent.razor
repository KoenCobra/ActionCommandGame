<li class="list-group-item">
    @PlayerItem.Name
    @if (!string.IsNullOrWhiteSpace(@PlayerItem.Description))
    {
        @PlayerItem.Description;
    }
    @if (@PlayerItem.Fuel > 0)
    {
        <span class="primary-color"> Fuel: @PlayerItem.RemainingFuel/@PlayerItem.Fuel</span>;
    }
    @if (@PlayerItem.Attack > 0)
    {
        <span class="primary-color"> Attack: @PlayerItem.RemainingAttack/@PlayerItem.Attack</span>;
    }
    @if (@PlayerItem.Defense > 0)
    {
        <span class="primary-color"> Defence: @PlayerItem.RemainingDefense/@PlayerItem.Defense</span>;
    }
    @if (@PlayerItem.ActionCooldownSeconds > 0)
    {
        <span class="primary-color"> Cooldown seconds: @PlayerItem.ActionCooldownSeconds</span>;
    }
</li>

@code {
    [Parameter]
    public PlayerItemResult PlayerItem { get; set; }
}
