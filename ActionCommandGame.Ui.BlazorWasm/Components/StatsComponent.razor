<div class="card shadow">
    <div class="card-header text-center h2 bg-dark text-white">
        <img class="rounded-circle" style="height: 60px; width: 60px" src="/Images/@Player.ImageName"/>
        <i class="far fa-list-alt icon-background"></i>
        Stats
    </div>
    <div class="card-body stats-body fw-bold">
        <div class="d-flex align-items-start">
            <div class="fa-layers fa-fw fa-2x me-3">
                <i class="fas fa-circle icon-background"></i>
                <i class="fas fa-child text-white" data-fa-transform="shrink-5"></i>
            </div>
            <div class="flex-grow-1">
                @Player.Name
                <hr>
            </div>
        </div>
        <div class="d-flex align-items-start">
            <div class="fa-layers fa-fw fa-2x me-3">
                <i class="fas fa-circle icon-background"></i>
                <i class="fas fa-fire-alt text-white" data-fa-transform="shrink-8"></i>
            </div>
            <ul class="flex-grow-1 list-unstyled">
                <li>Fuel : <span class="primary-color fw-bolder">@Player.CurrentFuelName</span></li>
                <li>Remaining : @($"{Player.RemainingFuel}/{Player.TotalFuel}")</li>
                <li><hr></li>
            </ul>
        </div>
        <div class="d-flex align-items-start">
            <div class="fa-layers fa-fw fa-2x me-3">
                <i class="fas fa-circle icon-background"></i>
                <i class="fas fa-weight-hanging text-white" data-fa-transform="shrink-8"></i>
            </div>
            <ul class="flex-grow-1 list-unstyled">
                <li>Attack : <span class="primary-color fw-bolder">@Player.CurrentAttackName</span></li>
                <li>Remaining : @($"{Player.RemainingAttack}/{Player.TotalAttack}")</li>
                <li><hr></li>
            </ul>
        </div>
        <div class="d-flex align-items-start">
            <div class="fa-layers fa-fw fa-2x me-3">
                <i class="fas fa-circle icon-background"></i>
                <i class="fas fa-shield-alt text-white" data-fa-transform="shrink-8"></i>
            </div>
            <ul class="flex-grow-1 list-unstyled">
                <li>Defense : <span class="primary-color fw-bolder">@Player.CurrentDefenseName</span></li>
                <li>Remaining : @($"{Player.RemainingDefense}/{Player.TotalDefense}")</li>
                <li><hr></li>
            </ul>
        </div>
        <div class="d-flex align-items-start">
            <div class="fa-layers fa-fw fa-2x me-3">
                <i class="fas fa-circle icon-background"></i>
                <i class="fas fa-fist-raised text-white" data-fa-transform="shrink-7"></i>
            </div>
            <div class="flex-grow-1">
                Gains: @Player.Gains
                <hr>
            </div>
        </div>
        <div class="d-flex align-items-start">
            <div class="fa-layers fa-fw fa-2x me-3">
                <i class="fas fa-circle icon-background"></i>
                <i class="fas fa-level-up-alt text-white" data-fa-transform="shrink-5"></i>
            </div>
            <div class="flex-grow-1">
                @($"Level : {Player.GetLevel()} ({Player.Experience}/{Player.GetExperienceForNextLevel()})");
                <hr>
            </div>
        </div>
        <div class="d-flex align-items-start">
            <div class="fa-layers fa-fw fa-2x me-3">
                <i class="fas fa-circle icon-background"></i>
                <i class="fas fa-history text-white" data-fa-transform="shrink-5"></i>
            </div>
            <div class="flex-grow-1">
                Last Action: @Player.LastActionExecutedDateTime.ToString()
            </div>
        </div>
    </div>
</div>

@code {
    [Parameter]
    public PlayerResult Player { get; set; }
}
